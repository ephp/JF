{% set value = pratica.value(question.question) %}
<div>
    <h4><abbr title="{{ question.question.esempioLocale(app.user.locale) }}">{{ question.question.domandaLocale(app.user.locale) }}</abbr></h4>
    <input id="risposta_{{ question.question.id }}" type="text" value="{% if value %}{{ value.response }}{% endif %}" class="auto_date check-save" name="risposta[{{ question.question.id }}]" /><br/>
    e.g.: use <b>dd/mm/yyyy</b>, <b>mm/yyyy</b>, <b>yyyy</b> or the sintax <b>today</b>, <b>tomorrow</b> or <b>5dd</b>
</div>

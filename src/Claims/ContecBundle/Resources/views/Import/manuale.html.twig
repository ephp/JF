{% extends '::base.html.twig' %}

{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-cog"></span>
    </div>
    <h1>Importazione <small>da Ravinale</small></h1>
</div>
<div class="row-fluid">
    <div class="span6">
        <div class="block">
            <div class="head green">
                <div class="icon"><i class="ico-folder-open"></i></div>
                <h2>Nuove pratiche</h2>
            </div>  
            <div class="data-fluid">
                <table class="table" cellpadding="0" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>TPA</th>
                            <th>Claimant</th>
                            <th>Log</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in pratiche_nuove %}
                        <tr>
                            <td>{{ entity.codice }}</td>
                            <td>{{ entity.claimant }}</td>
                            <td>{{ entity.lastLog|raw }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="block">
            <div class="head yellow">
                <div class="icon"><i class="ico-folder-open-alt"></i></div>
                <h2>Pratiche aggiornate</h2>
            </div>  
            <div class="data-fluid">
                <table class="table" cellpadding="0" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>TPA</th>
                            <th>Claimant</th>
                            <th>Log</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in pratiche_aggiornate %}
                        <tr>
                            <td><a href="{{ url('claims_hospital_pratica', {'slug': entity.slug}) }}">{{ entity.codice }}</a></td>
                            <td>{{ entity.claimant }}</td>
                            <td>{{ entity.lastLog|raw }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}

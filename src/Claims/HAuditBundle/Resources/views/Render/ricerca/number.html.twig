    <table class="no-margin no-padding">
        <tr>
            <td>
                <input type="number" value="{% if ricerca[question.id] is defined %}{{ ricerca[question.id]['from'] }}{% endif %}" name="ricerca[{{ question.id }}][from]" placeholder="from" />

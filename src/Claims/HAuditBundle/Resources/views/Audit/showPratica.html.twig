{% extends '::base.html.twig' %}

{% block js %}
{% javascripts  
    '@EphpUtilityBundle/Resources/public/js/check_sanitize_regexp.js'
    '@ClaimsHAuditBundle/Resources/public/js/scheda.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock js %}

{% block inline_css %}
.pagination ul>li>a,.pagination ul>li>span{float:left;width:20px;padding:4px 12px;line-height:20px;text-decoration:none;border:1px solid #ddd;}
.pagination ul>li:first-child>a, .pagination ul>li:first-child>span {-webkit-border-bottom-left-radius: 4px;border-bottom-left-radius: 4px;-webkit-border-top-left-radius: 4px;border-top-left-radius: 4px;-moz-border-radius-bottomleft: 4px;-moz-border-radius-topleft: 4px;}
{% endblock inline_css %}

{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-eye-open"></span>
    </div>
    <h1>Audit Hospital<small>{{ audit.luogo }} - {{ audit.giorno|date('d/m/Y') }}</small></h1>
    <div class="icon dblue right white">
        <a target="_blank" href="{{ path('claims_audit_hospital_word_report', {'slug': pratica.slug}) }}"><span class="ico-file-3" title="Esporta Word"></span></a>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
        <div class="block">
            <div class="data-fluid">
                <div class="head dblue">                                
                    <h2>{{ pratica.codice }} - {{ pratica.claimant }}</h2>
                </div>
                <div class="data dark">
                    <h3>{{ pratica.gruppo }}</h3>
                    <div class="row-fluid">
                        <div class="block" style="margin-bottom: 5px;">
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 1, 'label': 'DOL', 'span_value': 2, 'value': pratica.dol|date('d-m-Y')} %}
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 1, 'label': 'DON', 'span_value': 2, 'value': pratica.don|date('d-m-Y')} %}
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 2, 'label': 'MFRef', 'span_value': 4, 'value': pratica.mfRef} %}
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="block" style="margin-bottom: 5px;">
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 2, 'label': 'Hospital', 'span_value': 4, 'value': pratica.ospedale} %}
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 2, 'label': 'DSCode', 'span_value': 4, 'value': pratica.dsCode} %}
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="block" style="margin-bottom: 5px;">
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 2, 'label': 'Reserve', 'span_value': 4, 'value': pratica.reserve, 'uumm': ' €'} %}
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 2, 'label': 'ProReserve', 'span_value': 4, 'value': pratica.proReserve, 'uumm': ' €'} %}
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="block" style="margin-bottom: 5px;">
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 1, 'label': 'Anno', 'span_value': 2, 'value': pratica.anno} %}
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 1, 'label': 'Mese', 'span_value': 2, 'value': pratica.mese} %}
                            {% include 'ClaimsHBundle:Tabellone:commons/sbrick.html.twig' with {'span_label': 2, 'label': 'Payment', 'span_value': 4, 'value': pratica.payment, 'uumm': ' €'} %}
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="block icon no-margin">
                                <h3 class="ico-pencil">1. Fact</h3>
                            </div>
                            <textarea id="fact_audit" class="expand autoupdate autogrow" pratica="{{ pratica.slug }}" name="fact" >{{ pratica.fact }}</textarea>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="block icon no-margin">
                                <h3 class="ico-pencil">2. Investigation Handling</h3>
                            </div>
                            <textarea id="investigationHandling_audit" class="expand autoupdate autogrow" pratica="{{ pratica.slug }}" name="investigationHandling" >{{ pratica.investigationHandling }}</textarea>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="block icon no-margin">
                                <h3 class="ico-pencil">3. Liability</h3>
                            </div>
                            <textarea id="liability_audit" class="expand autoupdate autogrow" pratica="{{ pratica.slug }}" name="liability" >{{ pratica.liability }}</textarea>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="block icon no-margin">
                                <h3 class="ico-pencil">4. Quantum</h3>
                            </div>
                            <textarea id="quantum_audit" class="expand autoupdate autogrow" pratica="{{ pratica.slug }}" name="quantum" >{{ pratica.quantum }}</textarea>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="block icon no-margin">
                                <h3 class="ico-pencil">5. Negotiation Handling</h3>
                            </div>
                            <textarea id="negotiationHandling_audit" class="expand autoupdate autogrow " pratica="{{ pratica.slug }}" name="negotiationHandling" >{{ pratica.negotiationHandling }}</textarea>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="block icon no-margin">
                                <h3 class="ico-pencil">6. Civil/Criminal Proceeding Handling</h3>
                            </div>
                            <textarea id="proceedingHandling_audit" class="expand autoupdate autogrow" pratica="{{ pratica.slug }}" name="proceedingHandling" >{{ pratica.proceedingHandling }}</textarea>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="block icon no-margin">
                                <h3 class="ico-pencil">7. Our Comments</h3>
                            </div>
                            <textarea id="ourComments_audit" class="expand autoupdate autogrow" pratica="{{ pratica.slug }}" name="ourComments" >{{ pratica.ourComments }}</textarea>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="block icon no-margin">
                                <h3 class="ico-pencil">8. NL Damage</h3>
                            </div>
                            <textarea id="nlDamage_audit" class="expand autoupdate autogrow" pratica="{{ pratica.slug }}" name="nlDamage" >{{ pratica.nlDamage }}</textarea>
                        </div>
                    </div>
                    {#

                        <div class="row-fluid">
                            <div class="span12">
                                <div class="block icon no-margin">
                                    <h3 class="ico-alarm">Audit</h3>
                                </div>
                                <textarea id="audit" class="expand autoupdate autogrow audit" pratica="{{ pratica.slug }}" name="auditText" placeholder="Inserisci qui l'audit">{{ pratica.auditText }}</textarea>
                            </div>
                        </div>

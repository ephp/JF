{% extends '::base.html.twig' %}

{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-cog"></span>
    </div>
    <h1>Audit</h1>
</div>
<a href="{{ path('claims-h-audit_new') }}">
    <span class="label label-important">Nuovo audit</span>
</a>
<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <div class="data-fluid">
                <table class="table" cellpadding="0" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Luogo</th>
                            <th>Giorno</th>
                            <th>Note</th>
                            <th width="40" class="TAC">Op.</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>                            
                            <td><a href="{{ path('claims-h-audit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.luogo }}</td>
                            <td>{% if entity.giorno %}{{ entity.giorno|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ entity.note }}</td>
                            <td>
                <ul>                    
                    {% include ":commons:edit.html.twig" with {'route': path('claims-h-audit_edit', { 'id': entity.id })} %}                    
                    {% include ":commons:show.html.twig" with {'route': path('claims-h-audit_show', { 'id': entity.id })} %}
                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                
                
        </tbody>
    </table>

{% endblock %}

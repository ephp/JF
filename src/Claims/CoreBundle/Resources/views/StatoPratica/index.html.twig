{% extends '::base.html.twig' %}

{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-circle-arrow-up"></span>
    </div>
    <h1>Stato delle pratiche <small>Claims</small></h1>
</div>

<div class="row-fluid">
    <div class="span8">
        <div class="block">
            <a href="{{ path('claims_stato_pratica_new') }}">
                <span class="label label-important">Nuovo</span>
            </a>
            <div class="data-fluid">
                <table class="table" cellpadding="0" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Stato</th>
                            <th width="20"><abbr title="Visibile nei tab">Tab</abbr></th>
                            <th width="20"><abbr title="Statistiche attive">Stats</abbr></th>
                            <th width="20"><abbr title="Memorizza su calendario i cambiamenti di stato">Cal.</abbr></th>
                            <th width="20"><abbr title="Chiude la pratica">Definita</abbr></th>
                            <th width="20"><abbr title="Stati di default">Default</abbr></th>
                            <th width="40" class="TAC">Operazioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.stato }}</td>
                                <td class="switch" rel="tab">
                                    {% if entity.tab %}
                                        <a href="javascript:void(0)" class="button green">
                                            <div class="icon"><span class="ico-check"></span></div>
                                        </a>                                        
                                    {% else %}
                                        <a href="javascript:void(0)" class="button red">
                                            <div class="icon"><span class="ico-check-empty"></span></div>
                                        </a>                                        
                                    {% endif %}
                                </td>
                                <td class="switch" rel="stats">
                                    {% if entity.stats %}
                                        <a href="javascript:void(0)" class="button green">
                                            <div class="icon"><span class="ico-check"></span></div>
                                        </a>                                        
                                    {% else %}
                                        <a href="javascript:void(0)" class="button red">
                                            <div class="icon"><span class="ico-check-empty"></span></div>
                                        </a>                                        
                                    {% endif %}
                                </td>
                                <td class="switch" rel="annota">
                                    {% if entity.annota %}
                                        <a href="javascript:void(0)" class="button green">
                                            <div class="icon"><span class="ico-check"></span></div>
                                        </a>                                        
                                    {% else %}
                                        <a href="javascript:void(0)" class="button red">
                                            <div class="icon"><span class="ico-check-empty"></span></div>
                                        </a>                                        
                                    {% endif %}
                                </td>
                                <td class="switch" rel="chiudi">
                                    {% if entity.chiudi %}
                                        <a href="javascript:void(0)" class="button green">
                                            <div class="icon"><span class="ico-check"></span></div>
                                        </a>                                        
                                    {% else %}
                                        <a href="javascript:void(0)" class="button red">
                                            <div class="icon"><span class="ico-check-empty"></span></div>
                                        </a>                                        
                                    {% endif %}
                                </td>
                                <td class="uniquw" rel="primo">
                                    {% if entity.primo %}
                                        <a href="javascript:void(0)" class="button blue">
                                            <div class="icon"><span class="ico-check"></span></div>
                                        </a>                                        
                                    {% else %}
                                        <a href="javascript:void(0)" class="button dblue">
                                            <div class="icon"><span class="ico-check-empty"></span></div>
                                        </a>                                        
                                    {% endif %}
                                </td>
                                <td>
                                    {% include ":commons:edit.html.twig" with {'route': path('claims_stato_pratica_edit', { 'id': entity.id })} %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>                    
            </div> 
        </div>            
    </div>            
</div>         

{% endblock %}
{% extends '::base.html.twig' %}
{% form_theme edit_form '::form_aries_layout.html.twig' %}
{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-circle-arrow-up"></span>
    </div>
    <h1>Stato delle pratiche <small>Claims</small></h1>
</div>
{{ form_start(edit_form) }}
    <div class="row-fluid">
        <div class="span6">
            <div class="block">
                <div class="head">                                
                    <h2>Nuovo</h2>
                </div>                                        
                <div class="data-fluid">
                    {{ form_row(edit_form.stato) }}
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="block">
                <div class="head">                                
                    <h2>&nbsp;</h2>
                </div>                                        
                <div class="data-fluid">
                    {{ form_row(edit_form.tab) }}
                    {{ form_row(edit_form.stats) }}
                    {{ form_row(edit_form.annota) }}
                    {{ form_row(edit_form.chiudi) }}
                    {{ form_row(edit_form.primo) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(edit_form) }}
{{ form_end(edit_form) }}
<a href="{{ path('claims_stato_pratica') }}">
    <span class="label label-inverse">Torna indietro</span>
</a>
{{ form(delete_form) }}
{% endblock %}

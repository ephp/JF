{% set value = pratica.value(question.question.id) %}
<div>
    <h4><abbr title="{{ question.question.example }}">{{ question.question.question }}</abbr></h4>
    <select name="risposta[{{ question.question.id }}]">
        <option value="" ></option>
        {% for risposta in question.question.options %}
            <option value="{{ risposta }}" {% if value and value.response == risposta%}selected="selected"{% endif %}>{{ risposta }}</option>
        {% endfor %}
    </select>
</div>
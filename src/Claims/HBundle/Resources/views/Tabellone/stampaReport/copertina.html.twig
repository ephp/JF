<div class="row-fluid">
    <div class="span12">
        <div class="block icon no-margin">
            <h3 class="ico-file-3">Report {{ entity }}</h3>
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span1">
        <div class="block bold">
            Claimant:
        </div>
    </div>
    <div class="span5 bordered-right">
        <div class="block tcenter">
            {{ entity.claimant }}
        </div>
    </div>
    <div class="span1 no-margin">
        <div class="block bold">
            TPA:
        </div>
    </div>
    <div class="span5">
        <div class="block tcenter">
            {{ entity.ospedale.sistema.nome }}
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span1">
        <div class="block bold">
            SOI:
        </div>
    </div>
    <div class="span5 bordered-right">
        <div class="block tcenter">
            {{ entity.getReportSoi(true) }}
        </div>
    </div>
    <div class="span1 no-margin">
        <div class="block bold">
            N.Claim:
        </div>
    </div>
    <div class="span5">
        <div class="block tcenter">
            {{ entity.codice }}
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            Data evento (DOL):
        </div>
    </div>
    <div class="span3">
        <div class="block tcenter">
            {% if entity.reportDol %}{{ entity.reportDol|date('d/m/Y') }}{% endif %}
        </div>
    </div>
    <div class="span1 bordered-right">
        <div class="block bold">
            &nbsp;
        </div>
    </div>
    <div class="span2 no-margin">
        <div class="block bold">
            Data reclamo (DON):
        </div>
    </div>
    <div class="span3">
        <div class="block tcenter">
            {% if entity.reportDon %}{{ entity.reportDon|date('d/m/Y') }}{% endif %}
        </div>
    </div>
    <div class="span1">
        <div class="block bold">
            &nbsp;
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            Descrizione evento:
        </div>
    </div>
    <div class="span10">
        <div class="block">
            {{ entity.reportDescrizione|nl2br }} 
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            MPL:
        </div>
    </div>
    <div class="span10">
        <div class="block">
            {{ entity.getReportMpl(true) }} 
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            Giudiziale:
        </div>
    </div>
    <div class="span10">
        <div class="block">
            {{ entity.reportGiudiziale }} 
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            Other Policies:
        </div>
    </div>
    <div class="span10">
        <div class="block">
            {{ entity.reportOtherPolicies|nl2br }} 
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            Tipo danno (TPL):
        </div>
    </div>
    <div class="span4 bordered-right">
        <div class="block tcenter">
            {{ entity.getReportTypeOfLoss(true) }} 
        </div>
    </div>
    <div class="span2 no-margin">
        <div class="block bold">
            Dipartimento ospedaliero:
        </div>
    </div>
    <div class="span4">
        <div class="block tcenter">
            {{ entity.getReportServiceProvider(true) }} 
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            Possible Recovery:
        </div>
    </div>
    <div class="span4 bordered-right">
        <div class="block tcenter">
            {{ entity.reportPossibleRecovery }} €
        </div>
    </div>
    <div class="span2 no-margin">
        <div class="block bold">
            Amount Reserved:
        </div>
    </div>
    <div class="span4">
        <div class="block tcenter">
            {% if entity.reportAmountReserved < 0 %}N.P.{% else %}{{ entity.reportAmountReserved }} €{% endif %} 
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            Applicable Deductable:
        </div>
    </div>
    <div class="span4 bordered-right">
        <div class="block tcenter">
            {{ entity.reportApplicableDeductable }} € 
        </div>
    </div>
    <div class="span6">
        <div class="block bold">
        </div>
    </div>
</div>
<div class="row-fluid bordered">
    <div class="span2">
        <div class="block bold">
            Future Conduct:
        </div>
    </div>
    <div class="span10">
        <div class="block">
            {{ entity.reportFutureConduct|raw }} 
        </div>
    </div>
</div>
<div class="row-fluid bordered bordered-bottom">
    <div class="span6">
        <div class="block bold">
        </div>
    </div>
    <div class="span6">
        <div class="block bold">
            AVV. {{ entity.reportGestore.nome|upper }}
        </div>
    </div>
</div>

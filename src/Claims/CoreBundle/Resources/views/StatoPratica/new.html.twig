{% extends '::base.html.twig' %}
{% form_theme form '::form_aries_layout.html.twig' %}
{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-circle-arrow-up"></span>
    </div>
    <h1>Stato delle pratiche <small>Claims</small></h1>
</div>
{{ form_start(form) }}
    <div class="row-fluid">
        <div class="span4">
            <div class="block">
                <div class="head">                                
                    <h2>Nuovo</h2>
                </div>                                        
                <div class="data-fluid">
                    {{ form_row(form.stato) }}
                </div>
            </div>
        </div>
        <div class="span8">
            <div class="block">
                <div class="head">                                
                    <h2>&nbsp;</h2>
                </div>                                        
                <div class="data-fluid">
                    {{ form_row(form.tab) }}
                    {{ form_row(form.stats) }}
                    {{ form_row(form.annota) }}
                    {{ form_row(form.chiudi) }}
                    {{ form_row(form.primo) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}
<a href="{{ path('claims_stato_pratica') }}">
    <span class="label label-inverse">Torna indietro</span>
</a>
{% endblock %}


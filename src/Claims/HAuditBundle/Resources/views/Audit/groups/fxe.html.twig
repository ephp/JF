    <input id="risposta_{{ question.question.id }}" type="text" class="eur" value="{% if value %}{{ value.response }}{% endif %}" name="risposta[{{ question.question.id }}]" />
</div>
<script type="text/javascript">
    function fx{{ question.question.id }}() {
    {% for row in question.question.options %}
        {{ row|raw }}
    {% endfor %}
    }
    fx{{ question.question.id }}();
</script>
{% extends '::base.html.twig' %}

{% block inline_css %}
.body .content .table td {line-height: normal;}
.body .content .table.grid th {line-height: normal;}
{% endblock inline_css %}

{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-eye-open"></span>
    </div>
    <h1>Audit Hospital<small>{{ entity.luogo }} - {{ entity.giorno|date('d/m/Y') }}</small></h1>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <div class="data-fluid">
                <a href="{{ path('claims-h-audit_show', {'id': entity.id}) }}"><span class="label label-green" style="margin-bottom: 3px;">Riassunto</span></a>
                <a href="{{ path('claims-h-audit_risposte', {'id': entity.id}) }}"><span class="label label-success" style="margin-bottom: 3px;">Risposte</span></a>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <div class="data-fluid">
                <table class="table grid" cellpadding="0" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="40">#</th>
                            {% set name = '' %}
                            {% set prev_name = '' %}
                            {% for question in entity.question %}
                                {% if question.sottogruppo %}
                                    {% set name = question.sottogruppo.titoloLocale(app.user.locale) %}
                                {% else %}
                                    {% set name = question.question.domandaLocale(app.user.locale) %}
                                {% endif %}
                                {% if name != prev_name %}
                                    <th style="min-width: 150px;">{{ name }}</th>
                                    {% set prev_name = name %}
                                {% endif %}
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                    {% for pratica in entity.pratiche %}
                        <tr>                            
                            <td>{{ loop.index }}</td>
                            {% set name = '' %}
                            {% set prev_name = '' %}
                            {% for question in entity.question %}
                                {% if question.sottogruppo %}
                                    {% set name = question.sottogruppo.titoloLocale(app.user.locale) %}
                                {% else %}
                                    {% set name = question.question.domandaLocale(app.user.locale) %}
                                {% endif %}
                                {% if name != prev_name %}
                                    {% if question.sottogruppo %}
                                        {% set values = pratica.subgroupValues(question.sottogruppo.id) %}
                                    {% else %}
                                        {% set values = pratica.values(question.question) %}
                                    {% endif %}
                                    <td style="min-width: 150px;"{% if question.sottogruppo %} nowrap{% endif %}>
                                        {% if values %}
                                            {% for value in values.response %}
                                                {{ value }}<br/>
                                            {% endfor %}
                                        {% else %}
                                            <td>-</td>
                                        {% endif %}
                                    </td>
                                    {% set prev_name = name %}
                                {% endif %}
{#
                                    {% include "ClaimsHAuditBundle:Audit:risposte/"~question.question.type~".html.twig" %}
#}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
                
{% endblock %}

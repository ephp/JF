                <option value="{{ pri.id }}">{{pri.priorita}}</option>
            {% endfor %}
        </select>
        <input type="hidden" name="semaforo[id]" id="semaforo_id" value="" />    
        <button type="button" onclick="assegnaSemaforo();" class="btn" id="bt_cambia_semaforo">Change</button>
        <div style="text-align:center;" class="no-display" id="wait_cambia_semaforo"><img src="{{ asset('/img/loaders/1d_2.gif') }}"></div>

{% extends '::base.html.twig' %}

{% block body -%}
<div class="page-header">
    <div class="icon">
        <span class="ico-cog"></span>
    </div>
    <h1>Gruppo</h1>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <div class="data-fluid">
                <a href="{{ path('eph_gurppi-audit_new') }}">
                    <span class="label label-important">Nuovo gruppo</span>
                </a>
                <table class="table" cellpadding="0" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title<br/>Titolo</th>
                            <th>Ordine</th>
                            <th>Show</th>
                            <th width="40" class="TAC">Op.</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.title }}<br/>{{ entity.titolo }}</td>
                            <td>{{ entity.ordine }}</td>
                            <td width="40" class="no-padding js-show">
                                {% if entity.show %}
                                    <a href="javascript:void()" class="button green role">
                                        <div class="icon"><span class="ico-check"></span></div>
                                    </a>
                                {% else %}
                                    <a href="javascript:void()" class="button red role">
                                        <div class="icon"><span class="ico-check-empty"></span></div>
                                    </a>
                                {% endif %}
                            </td>
                            <td>
                <ul>                    
                    {% include ":commons:edit.html.twig" with {'route': path('eph_gurppi-audit_edit', { 'id': entity.id })} %}
                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                
                
        </tbody>
    </table>

{% endblock %}

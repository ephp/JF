<div class="row-fluid">
    <div class="span12">
        <div class="block icon no-margin">
            <h3 class="ico-pencil">Note</h3>
        </div>
        <textarea class="autoupdate autogrow note" pratica="{{ entity.slug }}" name="note" placeholder="Inserisci qui le tue note">{{ entity.note }}</textarea>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="block icon no-margin">
            <h3 class="ico-user">Legali Avversari</h3>
        </div>
        <textarea class="autoupdate autogrow legali_avversari" pratica="{{ entity.slug }}" name="legali_avversari" placeholder="Inserisci qui i dati sui legali avversari">{{ entity.legaliAvversari }}</textarea>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="block icon no-margin">
            <h3 class="ico-info">Informazioni</h3>
        </div>
        <textarea class="autoupdate autogrow informazioni" pratica="{{ entity.slug }}" name="informazioni" placeholder="Inserisci qui le informazioni utili">{{ entity.informazioni }}</textarea>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="block icon no-margin">
            <h3 class="ico-money-bag">Dati Recupero</h3>
        </div>
        {% if app.user.hasRole('C_RECUPERI_H') %}
            <textarea class="autoupdate autogrow dati_recupero" pratica="{{ entity.slug }}" name="dati_recupero" placeholder="Inserisci qui i dati relativi al recupero">{{ entity.datiRecupero }}</textarea>
        {% else %}
            {{ entity.datiRecupero|raw }}
        {% endif %}
    </div>
</div>
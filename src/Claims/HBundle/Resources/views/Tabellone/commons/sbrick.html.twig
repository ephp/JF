{% if uumm is not defined %}{% set uumm = '' %}{% endif %}
<div class="span{{ span_label }}">
    <div class="block bold">
        {{ label }}
    </div>
</div>
<div class="span{{ span_value }}">
    <div class="block tright">
        {% if title is defined %}
            <abbr title="{{ title }}">{{ value }}</abbr> {{ uumm }}
        {% else %}
            {{ value }} {{ uumm }}
        {% endif %}
    </div>
</div>
<div style="display: none" id="fb_cambia_semaforo">
    <form id="cambia_semaforo">
        <div class="page-header">
            <div class="icon">
                <span class="ico-warning-sign"></span>
            </div>
            <h1>Change status to <small id="cambia_semaforo_a"></small></h1>
        </div>        
        <div style="clear: both"></div>
        <select name="semaforo[semaforo]" id="semaforo_semaforo">

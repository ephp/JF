<div>
    <h4><abbr title="{{ question.question.esempioLocale(app.request.locale) }}">{{ question.question.domandaLocale(app.request.locale) }}</abbr></h4>
    {% for risposta in question.question.options %}
        <label for="{{ question.question.id }}cb{{ loop.index }}"><input id="risposta_{{ question.question.id }}_s{{loop.index}}" type="checkbox" name="risposta[{{ question.question.id }}][]" value="{{ risposta }}" {% if value and risposta in value.response %}checked="checked"{% endif %} id="{{ question.question.id }}cb{{ loop.index }}"/> {{ risposta }}</label>
    {% endfor %}
</div>